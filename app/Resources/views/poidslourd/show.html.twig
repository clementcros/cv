{% extends 'base.html.twig' %}

{% block body %}
    <style>
    table{
        width: 500 em;
    }
    
</style>
    <h1>Poids lourd</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ poidslourd.id }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ poidslourd.marque }}</td>
            </tr>
            
            <tr>
                <th>Immatriculation</th>
                <td>{{ poidslourd.immatriculation }}</td>
            </tr>
            <tr>
                <th>Date mine</th>
                <td>{% if poidslourd.dateMine %}{{ poidslourd.dateMine|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Cout normal</th>
                <td>{{ poidslourd.coutNormal }}</td>
            </tr>
            <tr>
                <th>Commentaire cout normal</th>
                <td>{{ poidslourd.commentaireCoutNormal }}</td>
            </tr>
            <tr>
                <th>Cout supplementaire</th>
                <td>{{ poidslourd.coutSupplementaire }}</td>
            </tr>
            <tr>
                <th>Commentaire cout supplementaire</th>
                <td widht="100%">{{ poidslourd.commentaireCoutSupplementaire }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('poidslourd_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('poidslourd_edit', { 'id': poidslourd.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
            
{% endblock %}
